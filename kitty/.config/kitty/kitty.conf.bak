# vim:fileencoding=utf-8:foldmethod=marker

#: Fonts {{{

#: kitty has very powerful font management. You can configure
#: individual font faces and even specify special fonts for particular
#: characters.

font_family      FiraCode Nerd Font
bold_font        FiraCode Nerd Font
italic_font      JetBrainsMono Nerd Font
bold_italic_font Operator Mono
font_size 16.0
remember_window_size  no
initial_window_width  1000
initial_window_height 700
confirm_os_window_close 0

map alt+j          scroll_line_down
map alt+k          scroll_line_up
map alt+page_up    scroll_page_up
map alt+page_down  scroll_page_up
map alt+home       scroll_home
map alt+end        scroll_end
map alt+end        scroll_end
map cmd+n          new_tab
map alt+q          close_tab
map alt+l          next_tab
map alt+h          previous_tab
# BEGIN_KITTY_THEME
# Aquarium Dark
include current-theme.conf
# END_KITTY_THEME
