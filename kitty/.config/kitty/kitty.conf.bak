# font_family      FiraCode Nerd Font Mono
# bold_font        FiraCode Nerd Font Mono
# italic_font      JetBrainsMono Nerd Font
# italic_font      UbuntuMono Nerd Font
font_family      Operator Mono Lig
bold_font        Operator Mono
italic_font      Operator Mono Lig
bold_italic_font Operator Mono
font_size 16.0

# Initial_window_size
remember_window_size  no
initial_window_width  1000
initial_window_height 700
confirm_os_window_close 0

# NO BELLS!
enable_audio_bell no

# mapping
map alt+j          scroll_line_down
map alt+k          scroll_line_up
map alt+page_up    scroll_page_up
map alt+page_down  scroll_page_up
map alt+home       scroll_home
map alt+end        scroll_end
map alt+end        scroll_end
map cmd+n          new_tab
map alt+q          close_tab
map alt+l          next_tab
map alt+h          previous_tab

# 使用 ctrl + 鼠标右键打开链接
mouse_map ctrl+left press ungrabbed,grabbed mouse_click_url

# BEGIN_KITTY_THEME
# GitHub Light
include current-theme.conf
# END_KITTY_THEME
