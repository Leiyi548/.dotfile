# i3 config file (v4)
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4
set $term kitty
set $explorer thunr
set $editor emacs

workspace_auto_back_and_forth yes
# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
# make this font larger
font pango:FiraCode Nerd Font 12
# ===
# === 设置特定效果
# ===
# set float window
# xprop | grep WM_CLASS
# for_window [class="dida"] floating enable  resize set 800 480,move right 330px,move down 70px
for_window [class="netease-cloud-music"] floating enable
for_window [class="Wine"] floating enable
for_window [class="Nutstore"] floating enable
for_window [class="icalingua"] floating enable
# for_window [class="jetbrains-idea"] floating enable
for_window [class="TelegramDesktop"] floating enable  resize set 800 480
for_window [class="yesplaymusic"] floating enable  resize set 800 480
for_window [class="Xfce4-power-manager-settings"] floating enable  resize set 640 480
for_window [class="Thunar"] floating enable  resize set 800 480
for_window [class="fcitx5-config-qt"] floating enable  resize set 800 480
for_window [class="dida"] floating enable  resize set 800 480
for_window [instance="crx_ikhdkkncnoglghljlkmcimlnlhkeamad"] floating enable  resize set 800 480

# 特定应用指定窗口
assign [class="Code"] 2
# assign [class="Emacs"] 2
assign [class="icalingua"] 3
assign [class="TelegramDesktop"] 3
assign [instance="wechat.exe"] 4
assign [class="Nutstore"] 3
assign [class="netease-cloud-music"] 4
assign [class="yesplaymusic"] 4
assign [class="smplayer"] 6
assign [class="obsidian"] 7
assign [class="obs"] 6
assign [class="jetbrains-idea"] 8
# assign [class="firefox"] $ws9

###
### 开机启动项目
###
exec_always --no-startup-id $HOME/.config/polybar/launch.sh --cuts
exec_always --no-startup-id "~/.cargo/bin/i3-autolayout autolayout"
exec_always --no-startup-id flameshot
exec_always --no-startup-id nutstore
exec_always --no-startup-id ~/.dotfile/script/feh.sh
exec_always --no-startup-id Xfce4-power-manager
# 系统闲置333秒后灭屏，666秒后系统挂起。
exec --no-startup-id xset dpms 333 666
exec --no-startup-id fcitx5
exec --no-startup-id Nutstore
exec --no-startup-id picom
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex --autostart --environment i3
# The combination of xss-lock, nm-applet and pactl is a popular choice, so
# they are included here as an example. Modify as you see fit.
# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet
###
### 窗口边框
###
new_window none
new_float normal
hide_edge_borders both
#border width
default_border pixel 4
# border colors
# <colorclass> <border> <background> <text> <indicator> <child_border>
client.focused #3082F1 #3082F1 #F8F8F2 #3082F1 #3082F1
client.focused_inactive #343746 #343746 #F8F8F2 #21222C #21222C
client.unfocused #343746 #343746 #F8F8F2 #21222C #21222C
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

#===
#=== i3-gaps 设定
#===
gaps inner 8
gaps outer 2
# 如果打开这个的话,如果你是只有一个窗口的话,那么就不显示 gaps 和 边框
# smart_gaps on

# Use pactl to adjust volume in PulseAudio.
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle
# Sreen brightness controls
bindsym XF86MonBrightnessUp exec light -A 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec light -U 10 # decrease screen brightness

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
floating_minimum_size 100 x 100
floating_maximum_size -1 x -1
# start a terminal

#===
#=== 启动常用软件
#===

bindsym mod4+Return exec $term
bindsym mod4+Shift+Return exec $editor
bindsym mod4+b exec google-chrome-stable

#===
#=== i3 基础键位
#===

# close window
bindsym mod4+q kill

# change focus
bindsym mod4+h focus left
bindsym mod4+j focus down
bindsym mod4+k focus up
bindsym mod4+l focus right

# move focused window
bindsym mod4+Shift+h move left
bindsym mod4+Shift+j move down
bindsym mod4+Shift+k move up
bindsym mod4+Shift+l move right

# focus the parent container
bindsym $mod+a focus parent
# focus the child container
bindsym $mod+d focus child

# split in horizontal orientation (like vim vsplit)
bindsym mod4+v split h

# split in vertical orientation (like vim hsplit)
bindsym mod4+g split v


# use alt tab to switch recent workspace
bindsym mod1+Tab workspace back_and_forth

# use super+bracketleft/bracketright to move workspace
bindsym mod4+bracketleft workspace prev
bindsym mod4+bracketright workspace next

#===
#=== 布局切换
#===
# change container layout (stacked, tabbed, toggle split)
# 上下标签栏(推叠式)
bindsym mod4+Shift+t layout stacking
# 打开平铺模式
bindsym mod4+s layout toggle split
# 打开标签(tabbed)模式
bindsym mod4+t layout tabbed
# 将tabbed 模式的所有应用以平铺方式显示出来
bindsym mod4+x layout toggle all
# bindsym mod4+m exec "~/.cargo/bin/i3-autolayout tabmode --file-layout ~/tmp/i3-autolayout-tabmode.save"
# 将当前窗口浮动显示
bindsym mod4+f floating toggle
bindsym mod4+button2 floating toggle
# 全屏显示
bindsym mod1+f fullscreen toggle
# 移动浮动窗口,也能移动平铺窗口不过后面是没有,只是移动位置
bindsym $mod+Left move left 20 px
bindsym $mod+Down move down 20 px
bindsym $mod+Up move up 20 px
bindsym $mod+Right move right 20 px
# Move floating container to the center of all outputs
bindsym mod4+c move absolute position center
# 焦点在平铺桌面和浮动桌面进行切换
bindsym mod1+space focus mode_toggle


# ===
# === workspace
# ===

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym mod1+1 workspace number $ws1
bindsym mod1+2 workspace number $ws2
bindsym mod1+3 workspace number $ws3
bindsym mod1+4 workspace number $ws4
bindsym mod1+5 workspace number $ws5
bindsym mod1+6 workspace number $ws6
bindsym mod1+7 workspace number $ws7
bindsym mod1+8 workspace number $ws8
bindsym mod1+9 workspace number $ws9
bindsym mod1+0 workspace number $ws10

# move focused container to workspace
bindsym mod1+Shift+1 move container to workspace number $ws1,workspace number $ws1
bindsym mod1+Shift+2 move container to workspace number $ws2,workspace number $ws2
bindsym mod1+Shift+3 move container to workspace number $ws3,workspace number $ws3
bindsym mod1+Shift+4 move container to workspace number $ws4,workspace number $ws4
bindsym mod1+Shift+5 move container to workspace number $ws5,workspace number $ws5
bindsym mod1+Shift+6 move container to workspace number $ws6,workspace number $ws6
bindsym mod1+Shift+7 move container to workspace number $ws7,workspace number $ws7
bindsym mod1+Shift+8 move container to workspace number $ws8,workspace number $ws8
bindsym mod1+Shift+9 move container to workspace number $ws9,workspace number $ws9
bindsym mod1+Shift+0 move container to workspace number $ws10,workspace number $ws10

# ===
# === i3 配置加载/启动/关闭
# ===

# reload the configuration file
bindsym mod1+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym mod1+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym mod1+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keyshhh
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym mod4+r mode "default"
}

bindsym mod1+r mode "resize"

# control light and  sound
# bindsym mod4+a exec "light -A 10"
# bindsym mod4+d exec "light -U 10"
# bindsym mod4+shift+a exec "amixer -q set Master 5%+ unmute"
# bindsym mod4+shift+d exec "amixer -q set Master 5%- unmute"

bindsym F1 exec "flameshot gui"
bindsym mod4+u exec "i3lock -i ~/.dotfile/lock/02.png"
# bindsym mod4+u exec "~/.config/polybar/script/sysmenu"

#rofi -modi drun,run -show drun rofi
bindsym mod4+space exec "rofi -show drun"
bindsym mod4+p exec "rofi -show window -modi drun"
bindsym mod4+r exec "rofi -show run"

#===
#=== Scratchpad
#===
exec --no-startup-id $term --class scratchpad
bindsym $mod+minus exec $term --class scratchpad
for_window [class="scratchpad"] floating enable
for_window [class="scratchpad"] resize set 925 480
for_window [class="scratchpad"] move scratchpad
# Make the currently focused window a scratchpad
bindsym $mod+Shift+o move scratchpad
# Show the first scratchpad window
bindsym $mod+o [class="scratchpad"] scratchpad show [class="scratchpad"] move position center
